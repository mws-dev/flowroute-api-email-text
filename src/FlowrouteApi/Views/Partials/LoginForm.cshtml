@model LoginModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form asp-controller="Login" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="error"></div>
    @if (TempData["ErrorMessage"] != null && (TempData["LoginError"] as bool? ?? false))
    {
        <p class="error">@Html.Raw(TempData["ErrorMessage"])</p>
    }
    <div class="item">
        <label>Username <span class="req"><span asp-validation-for="UserName"></span></span></label>
        <input asp-for="UserName"/>
    </div>
    <div class="item">
        <label>Password <span class="req"><span asp-validation-for="Password"></span></span></label>
        <input asp-for="Password" type="password" />
    </div>
    <div class="btn actions">
        <button type="submit">Login</button>
    </div>
    <input type="hidden" asp-for="ReturnUrl" />
</form>